# 运行模式：paper=模拟下单（不需要密钥），live=真实下单（需要下面的密钥/凭据）
BOT_MODE=paper

# 1=只跑一轮（便于调试），0=循环常驻
RUN_ONCE=0
PAPER_INITIAL_CASH=10
PAPER_MAX_FRACTION_PER_TRADE=0.5
PAPER_MAX_OPEN_ORDERS=3
PAPER_MIN_NOTIONAL=1
PAPER_TRADES_FILE_PATH=.paper_trades.json
PAPER_STATS_FILE_PATH=.paper_stats.json

STRAT_VOLATILITY_MULT=1.5
STRAT_TRADE_COOLDOWN_SECONDS=180
STRAT_MIN_ABS_RETURN_PCT=0.0015
STRAT_MAX_ENTRY_PRICE=0.9
STRAT_MIN_EDGE=0.005
STRAT_FEE_ESTIMATE=0.01
STRAT_MIN_TIME_TO_END_MINUTES=1
STRAT_MAX_TIME_TO_END_MINUTES=60

LIVE_CASH_USD=6
LIVE_ROLL_THRESHOLD_USD=10
LIVE_MAX_NOTIONAL_BELOW_THRESHOLD=1
LIVE_MAX_FRACTION_ABOVE_THRESHOLD=0.1
LIVE_MIN_NOTIONAL=1
LIVE_ENABLE_AUTO_BALANCE=1
LIVE_BALANCE_REFRESH_SECONDS=30
LIVE_TRADES_FILE_PATH=.live_trades.json
LIVE_STATS_FILE_PATH=.live_stats.json

# 飞书机器人 Webhook（留空则不发送提醒）
FEISHU_WEBHOOK_URL=

# 用于 Data API 查询仓位/成交的地址（不需要私钥）
POLYMARKET_WALLET=

# live 模式下用于下单的 funder 地址（通常可与上面 wallet 相同）
POLYMARKET_FUNDER_ADDRESS=

# CLOB 交易接口配置（一般保持默认即可）
POLYMARKET_CLOB_HOST=https://clob.polymarket.com
POLYMARKET_CHAIN_ID=137
POLYMARKET_SIGNATURE_TYPE=0

# live 模式必填：用于签名/下单的私钥（不要提交到仓库）
POLYMARKET_PRIVATE_KEY=

# live 模式可选：如果你已经有 API 凭据可直接填；不填会自动派生
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=
